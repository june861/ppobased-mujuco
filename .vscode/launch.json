{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },

        {
        "name": "Run TensorBoard",
        "type": "node",
        "request": "launch",
        "program": "/usr/local/bin/tensorboard",  // 替换为 tensorboard 的实际路径
        "args": [
            "--logdir=/project/no-representation-no-trust/runs",  // 日志文件夹
            "--port=6007"       // 设置端口
        ],
        "env": {
            "PYTHONPATH": "/usr/bin/python3"  // 可选，指定 Python 环境路径
        }
        }
    ]
}